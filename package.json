{
  "name": "YogaWithAdrieneBot",
  "version": "0.0.1",
  "description": "Gives you distraction-free yoga classes",
  "keywords": [],
  "author": "Ilya Belsky <ilya@belsky.in>",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "node dist/index.js",
    "start": "concurrently -k -n TSC,HER -c blue,green \"npm run tsc:watch\" \"npm run local\"",
    "tsc:watch": "tsc -w",
    "local": "nodemon --watch dist --exec \"heroku local\" --signal SIGTERM"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.7.4",
    "bluebird": "^3.7.2",
    "d3-time-format": "^2.2.3",
    "dayjs": "^1.8.28",
    "dotenv": "^8.2.0",
    "fs": "0.0.1-security",
    "json-to-pretty-yaml": "^1.2.2",
    "lodash": "^4.17.15",
    "number-to-emoji": "^1.0.0",
    "request": "^2.88.2",
    "telegraf": "^3.37.0",
    "written-number": "^0.9.1"
  },
  "devDependencies": {
    "@types/node": "^12.19.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.3.1",
    "nodemon": "^2.0.3",
    "typescript": "^4.0.5"
  }
}
